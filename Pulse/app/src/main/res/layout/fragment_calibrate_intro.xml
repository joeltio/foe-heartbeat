<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCalibratePrimary"
    tools:context="joeltio.pulse.Fragments.CalibrateIntroFragment">
    <TextView
        android:id="@+id/calibrate_intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAlignment="center"
        android:textColor="@color/colorCalibrateFontPrimary"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/calibrate_intro_text"/>
    <Button
        android:id="@+id/calibrate_intro_button"
        android:layout_below="@id/calibrate_intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/calibrate_intro_button" />
</RelativeLayout>
